PORT=10000
TOOL_SECRET=CHANGE_ME

# HotelRunner (Apps mode)
HOTELRUNNER_BASE=https://api2.hotelrunner.com
HOTELRUNNER_AVAILABILITY_PATH=/api/v1/availability/search
HOTELRUNNER_TOKEN=YOUR_APPS_BEARER_TOKEN
HOTELRUNNER_ID=777115870

# Logging
LOG_LEVEL=info
# Optional toggles
HOTELRUNNER_USE_BODY_HR_ID=false
HOTELRUNNER_DEBUG_LOG_REQUEST=false
HOTELRUNNER_MOCK_MODE=false
# Alternative base (fallback if 404s persist)
# HOTELRUNNER_BASE_ALT=https://api.hotelrunner.com
# Smart fallback strategies
HOTELRUNNER_SMART_STRATEGY=true
# comma-separated alternative paths to try on 404/400
HOTELRUNNER_ALT_PATHS=/availability/search,/api/availability/search
# Use raw Availability (no /availability/search). We will compute locally.
HOTELRUNNER_USE_RAW=true
# Raw endpoint path (adjust to your tenant)
HOTELRUNNER_AVAILABILITY_RAW_PATH=/api/v1/availability
# Optional: which query keys to try for dates (comma-separated; tried in order)
HOTELRUNNER_RAW_DATE_KEYS=check_in,check_out;checkin,checkout;start_date,end_date
